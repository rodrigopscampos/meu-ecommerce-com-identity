@model MeuEcommerce.Models.CheckoutIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td> Nome </td>
            <td> Preço </td>
            <td> Quantidade </td>    
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Carrinho.Itens)
        {
            <tr>
                <td> @item.Value.Nome </td>
                <td> R$ @item.Value.PrecoUnitario.ToString("N2") </td>
                <td>
                    <a class="btn btn-primary" href="/checkout/decrementa/@item.Key">-</a>
                    @item.Value.Quantidade
                    <a class="btn btn-dark" href="/checkout/incrementa/@item.Key">+</a>
                    <a class="btn btn-danger" href="/checkout/delete/@item.Key">Remover</a>
                </td>
            </tr>
        }
        <tr>
            <td colspan="1">
                Total
            </td>
            <td colspan="2">
                @Model.Carrinho.GetPrecoTotal().ToString("N2")
            </td>
        </tr>
        <tr>
            <td colspan="3">
                <a class="btn btn-link" href="/checkout/limpar">Limpar</a>
                <a class="btn btn-primary" href="/checkout/comprarealizada">Continuar</a>
            </td>
        </tr>
    </tbody>
</table>

